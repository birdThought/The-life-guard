    <!--注册验证Token缓存30分钟-->
    <cache name="registerTokenCache"
           maxElementsInMemory="100"
           eternal="false"
           timeToIdleSeconds="36000"
           timeToLiveSeconds="36000"
           overflowToDisk="false"
           statistics="false">
    </cache>
</ehcache>
