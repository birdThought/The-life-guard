           overflowToDisk="false"
           statistics="true">
    </cache>

    <!-- APP修改手机号与邮箱缓存      有效时长5分钟 -->
    <cache name="modifyMobileEmailCache"
           maxElementsInMemory="2000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="300"
           overflowToDisk="false"
           statistics="true">
    </cache>

    <!-- 定位数据的缓存 -->
    <cache name="locationCache"
           maxElementsInMemory="2000"
           eternal="true"
           timeToIdleSeconds="0"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>

    <!-- 短信休息一天 缓存 -->
    <cache name="SMSBreakOneDayCache"
           maxElementsInMemory="2000"
           eternal="false"
           timeToLiveSeconds="86400"
           overflowToDisk="false"
           statistics="true">
    </cache>

    <!-- 短信次数记录缓存 -->
    <cache name="SMSBreakTimesCache"
           maxElementsInMemory="2000"
           eternal="true"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>

    <!-- 用户共享数据缓存区 最大缓存数量为10,000 存活时间30分钟 每次刷新增长10分钟 -->
    <cache name="userShareData"
           maxElementsInMemory="10000"
           eternal="false"
