.mainbg{
	background-color: white;
	/*outline: 1px solid red;*/
}

/*标题*/
.main_title{
	position: fixed;
	left: 0;
	width: 100%;
	height: 3rem;
	line-height: 3rem;
}
.main_title > div {
	padding-left: 1rem;
	padding-right: 1rem;
}
.main_title > div >div{
	float: left;
	width: 33.3%;
}
.main_title_img{
	width:0.8rem;
	height: 1.4rem;
	display: table-cell;
	vertical-align: middle;
}
.main_title_text{
	text-align: center;
}

/*横向选项*/
.main_nav{
	position: fixed;
	display: flex;
	justify-content: space-around;
	width: 100%;
	left: 0;
	top: 3rem;
	margin:0;
	padding: 0;
	text-align: center;
	list-style-type: none;
	font-size: 1rem;
	/*outline: 1px solid red;*/
}
.main_nav > li{
	/*outline: 1px solid red;*/
}
.main_nav > li >span{
	display: inline-block;
	padding:0.5rem 0.5rem 0.5rem 0.5rem;
	
}
.main_nav > li >span:hover{
	border-bottom: 2px solid blue;
}
.nav_click{
	border-bottom: 2px solid blue;
}

.li_click{
	border-top: 1px solid #efeef3;
	border-bottom: 1px solid #efeef3;
}
/*侧边框列表*/
.li_slide li:hover{
	border-top: 1px solid #efeef3;
	border-bottom: 1px solid #efeef3;
}
/*侧边框及内容块*/
.slide_conent{
	position: relative;
	top:6rem;
	font-size: 1rem;
	z-index:-10;
	/*outline:1px solid red;*/
}
/*end 侧边框及内容块*/
/*侧边框*/

/*内容列表*/
.list_conent_div{
	margin-left: 1rem;
	margin-right: 1rem;
}

/*定义栅格化块*/
.option_div {
	margin: 0;
	padding: 0;
	list-style-type: none;
	display: table;
	width: 100%;
}


/*2.item內部中心居中*/

.option_item {
	position: relative;
	float:left;
	width: 33.3%;
	height: 8rem;
	text-align: center;
}


/*3.居中块(包含点击及文本)*/

.option_item>div {
	height: 8rem;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	/*outline: 1px solid red;*/
}


/*4.具体居中块*/

.option_item>div>span {
	display: block;
	width: 6.5rem;
	height: 6.5rem;
	line-height: 4rem;
	z-index: 10;
	background-size: cover;
	/*outline: 1px solid red;*/
}
