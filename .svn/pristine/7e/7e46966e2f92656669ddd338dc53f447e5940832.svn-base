*{box-sizing: border-box;}

.alignFlex{
	display: flex;
	align-items: center;
	box-shadow: 0px 10px 30px rgba(0,0,0,.1);
	padding-top: 10px;
	padding-bottom: 10px;
}
.clearShadow{
	box-shadow: none;
}
.item-content-border{
	margin-top: 2em;
	margin-bottom: 2em;
	border: 1px dashed #ccc;
	padding: 1em 1.5em;
	/*margin-left: 1.5em;*/
	font-size:1.4rem;
}
.header {
   /*  position: fixed; */
    width: 100%;
    background: #fff;
    z-index: 50;
    border-radius: 0;
    box-shadow: 0 0 10px rgba(0,0,0,0.2);
   /*  top: 0px; */
}
.navbar-inverse{
	background-color: #fff;
	border:none;
}
.navbar-inverse .navbar-toggle {
	margin-top: 20px;
    border-color: #48c858;
    background-color: #48c858;
}
.navbar-inverse .navbar-nav>li>a{
	color: #666;
}
.navbar-inverse .navbar-collapse, .navbar-inverse .navbar-form{
	border:none;
}
.navbar-inverse .navbar-toggle .icon-bar {
    /*background-color: #48c858;*/
}
.navbar-inverse .navbar-nav>.active>a, .navbar-inverse .navbar-nav>.active>a:focus, .navbar-inverse .navbar-nav>.active>a:hover{
	background-color: transparent;
	color:#48c858;
}
.navbar-inverse .navbar-toggle:hover, .navbar-inverse .navbar-toggle:focus {
    background: #48c858;
}
.item-title {
	font-size:1.6rem;
	margin-top:1.4rem;
}
.item-title h3 {
	font-size:1.5rem;
	color:#333;
}
.navbar-inverse .navbar-nav > li > a:hover, .navbar-inverse .navbar-nav > li > a:focus {
    color: #48c858;
}

.navbar-inverse .navbar-toggle:hover .icon-bar {
    background: #fff;
}



.banner img,.orgDown img{
	width: 100%;
}
.carousel-indicators .active{
	background-color: #80b421;
}
.item-content{
	margin: 20px auto;
	max-width: 1200px;
}

.row{
	margin-top: 20px;
	margin-bottom: 20px;
}

/* 閫夐」鍗″垏鎹� */
.tab-item{
	padding-left:15px;
	padding-right: 15px;
}
.nav-tabs a{
	font-size:16px;
}
.tab-content p{
	margin-top: 20px;
	margin-bottom: 10px;
}
.tab-content p a{
	padding-right:50px;
	font-size:16px;
}

.container .clearMargin{
	margin-top: 0;
}

.item-title h3{
	border-left:3px solid #48c858;
	padding-left: 0.5em;
}
/* 涓尰浜氬仴搴� */
.item-quetion{
	margin-top: 40px;
	border-top:1px solid #ddd;
	position: relative;
	padding-top:20px;
	margin-bottom: 16px;
}

.item-sub{
	position:absolute;
	top:-5%;
	transform: translateY(-5%);
	left: 2em;
	background-color: #fff;
	color:#ff8525;
}

.item-quetion form{
	/*padding-left: 2em;*/
	min-height: 300px;
}

.item-quetion form li{
	padding-left: 1.2em;
	margin-bottom: 1em;
}
.item-quetion form h4{
	margin-bottom: 1em;
}
.btn{
	padding:4px 26px;
	color:#fff;
	background-color: #48c858;
	display: inline-block;
	padding: 6px 12px;
	margin-bottom: 0;
	font-size: 14px;
	font-weight: 400;
	line-height: 1.42857143;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	-ms-touch-action: manipulation;
	touch-action: manipulation;
	cursor: pointer;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	background-image: none;
	border: 1px solid transparent;
	border-radius: 4px;
}

/* 鍒嗘瀽 */

.comment{
	
	padding-bottom: 30px;
}
.comment-content{
	border-top: 1px dashed #ddd;
	padding-top: 20px;

}
.comment-content li{
	line-height: 2.4em;
}
