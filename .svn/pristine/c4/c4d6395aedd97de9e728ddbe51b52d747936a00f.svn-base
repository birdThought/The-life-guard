.comLink{
    font-size:18px;
    margin-top:40px;
    margin-bottom: 60px;
}
.comLink p span{
    padding:5px 16px;
    border:1px solid #48c858;
    border-radius: 5px;
    margin-right:10px;
}
.comLink p span:nth-of-type(1){
    background-color:#48c858;
    color:#fff;
}
.comLink p span:nth-of-type(2){
    color:#48c858;
}
.comLink ul{
    padding:20px;
}
.comLink ul li{
    display: inline-block;
    padding: 0 14px;
    font-size:15px;
}
