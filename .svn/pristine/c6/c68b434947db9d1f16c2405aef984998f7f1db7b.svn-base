			*{
				font-size: 1.2rem;
			}
			body {
				margin: 0;
				padding: 0;
			}
			
			.bg {
				position: fixed;
				top: 0;
				width: 100%;
				height: 100%;
				z-index: -10;
				/*background: -webkit-linear-gradient(left top, red, blue);
				background: -o-linear-gradient(bottom right, red, blue);
				background: -moz-linear-gradient(bottom right, red, blue);
				background: linear-gradient(to bottom right, #9ec6a3, #2a3e45);*/
				background: -webkit-linear-gradient(left top, red, blue);
				background: -o-linear-gradient(bottom right, red, blue);
				background: -moz-linear-gradient(bottom right, red, blue);
				background: linear-gradient(to bottom right, #9ec6a3, #bdd3c3);
			}
			/*表单及其背景*/
			
			#block_form {
				position: relative;
				height: 45rem;
				margin: 5rem 1rem 0 1rem;
				color: white;
			}
			
			.block_form_bg {
				position: absolute;
				width: 100%;
				height: 100%;
				background-color: white;
				z-index: -5;
				background-color: #FAFAFA;
				opacity: 0.2;
				border-radius: 1rem;
			}
			/*图片*/
			
			.block_img {
				text-align: center;
			}
			/*提示块*/
			
			.block_tip {
				text-align: center;
			}
			/*选择项布局*/
			
			.block_option {
				padding: 1rem 0.5rem 1rem 0.5rem;
			}
			
			.block_option ul {
				margin: 0;
				padding: 0;
				list-style-type: none;
			}
			
			.block_option ul li {
				float: left;
				text-align: center;
				padding: 1rem 0 1rem 0;
				width: 29%;
				margin: 1rem 0.5rem 1rem 0.5rem;
				border: 1px solid #d1d1d1;
				color: #5c6a60;
				/*color: #d1d1d1;*/
				border-radius: 0.4rem;
				overflow: hidden;
				white-space: nowrap;
				text-overflow: ellipsis;
			}
			
			.block_option ul li:hover {
				border: 1px solid white;
				color: white;
			}
			/*按钮布局块*/
			
			.block_btn {
				color: white;
				text-align: center;
				display: flex;
				margin-top: 0.5rem;
				margin-bottom: 0.5rem;
			}
			/*按钮各布局*/
			
			.block_btn>div {
				width: 50%;
				text-align: center;
				display: flex;
				justify-content: center;
			}
			
			.block_btn>div>div {
				text-align: center;
				width: 50%;
				padding: 1rem 1rem 1rem 1rem;
				background-color: #1c484a;
				border-radius: 0.5rem;
			}