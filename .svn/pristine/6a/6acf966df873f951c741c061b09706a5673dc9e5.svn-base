
@charset "utf-8";

*:before, *:after, * {
    box-sizing: border-box;
}
 
 .btnSpan{
     position: absolute;
     top:0;
     right:0;
     padding:2px 10px 2px 0px;
     border:1px solid #ddd;
     border-radius:4px;
    /*  background: url(../images/addto.png) no-repeat center left 6px; */
     cursor: pointer;
     font-size: 15px;
 }
 
.right_body{
	height: auto;
    background: #fff;
    padding: 24px;
    margin-top:24px;
    border: 1px solid #ddd;
    border-bottom: none;
}

.right_title label {
    display: inline-block;
    font-size: 17px;
    cursor: pointer;
    position: relative;
    margin: 1px 0px;
    padding: 0px 15px;
    border-left: 3px solid rgb(0, 147, 255);
}

.right_title label.action {
    border-bottom: none;
    color: #0093ff;
}
.right_top{width: 80%;height:auto;}

.pointer {
    cursor: pointer;
}

@charset "utf-8";
.t-title{
	background-color: #eceeef;
	height:auto;
}
.layui-icon{
	font-size:20px;
}
.t-title li{
    font-weight: bold;
    padding: 2px 0;
    font-size:16px;
    text-align:center;
}
div.serviceBox ul.t-title > li{
	text-align:center;
}
.content-ul > li:nth-child(1n+2){
	text-align:center;
}
.serviceTitle > ul > li{
	display:inline-block;
	line-height:34px;
	width:33.1%;
}

tree-view.serviceBox > ul.content-ul > li:nth-child(1){margin:0 -20px 0 12px;}
.serviceBox > ul > li{
	width:33.1%;
	display:inline-block;
	line-height:34px;	
	letter-spacing:1px;
	font-size:16px;
}
ul > div.serviceBox{
	width:98%;
	margin:0 auto 0 2%;
	height:auto;
}
.serviceBox > ul > div > ul {
		height:0;
}
div.serviceBox > ul > li {
	float:left;
	border-bottom:1px solid #dee8e9;
}
tree-view.serviceBox{height:auto;}
.serviceBox > ul li:hover{
	background:#BFEBE4;
}
.serviceBox > ul > li:nth-child(2) a{
	color:deepskyblue;
}
.serviceBox >ul {
	border-bottom:1px solid #dee8e9;
}

